{% extends 'base.html.twig' %}

{% block title %}Work Details
{% endblock %}

{% block body %}
	<h1>Work Deatils</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ work.id }}</td>
			</tr>
			<tr>
				<th>Title</th>
				<td>{{ work.title }}</td>
			</tr>
			<tr>
				<th>Description</th>
				<td>{{ work.description }}</td>
			</tr>
			<tr>
				<th>File</th>
				<td><img src="{{asset('uploads/')~work.filename}}" width="180" height="120"></td>
			</tr>
		</tbody>
	</table>

	<a href="{{ path('work_index') }}" class="btn btn-outline-dark">back to list</a>
	{% if is_granted('ROLE_EDITOR') %}
		<a href="{{ path('work_edit', {'id': work.id}) }}" class="btn btn-dark">edit</a>

		{{ include('work/_delete_form.html.twig') }}
	{% endif %}
{% endblock %}
