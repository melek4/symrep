{% extends 'base.html.twig' %}

{% block title %}Manage Categories
{% endblock %}

{% block body %}
	<h1>Categories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Label</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>{{ category.id }}</td>
					<td>{{ category.label }}</td>
					<td>
						<a href="{{ path('category_show', {'id': category.id}) }}" class="btn btn-secondary">show</a>
						<a href="{{ path('category_edit', {'id': category.id}) }}" class="btn btn-secondary">edit</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="3">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	<a href="{{ path('category_new') }}" class="btn btn-dark">Create new</a>
{% endblock %}
